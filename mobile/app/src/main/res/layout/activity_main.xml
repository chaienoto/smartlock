<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <RelativeLayout
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="180dp"
        android:background="@drawable/unlock_background"
        android:elevation="1.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:background="@drawable/background_lock"
            android:elevation="1.5dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/img_find"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_state_lock_info"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_find"
                app:layout_constraintVertical_bias="0.95">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_door_lock"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/lock_button_background"
        android:elevation="1.5dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="UNLOCK"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"></Button>

    <Button
        android:id="@+id/btn_lock_otp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/ic_one_time_key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_lock_history"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/btn_lock_history"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_lock_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_lock_otp"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894"></Button>

    <TextView
        android:id="@+id/tv_lh"
        android:layout_width="94dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="One Time Key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_lock_otp"
        app:layout_constraintStart_toStartOf="@+id/btn_lock_otp"
        app:layout_constraintTop_toBottomOf="@+id/btn_lock_otp"
        app:layout_constraintVertical_bias="0.0">

    </TextView>

    <TextView
        android:id="@+id/tv_otp"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="History"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_lock_history"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="@+id/btn_lock_history"
        app:layout_constraintTop_toBottomOf="@+id/btn_lock_history"
        app:layout_constraintVertical_bias="0.0">

    </TextView>

    <TextView
        android:id="@+id/tv_find_info"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Bấm Vào FIND để tìm Smart Lock của bạn\n Lưu ý: đứng trong phạm vi 2m "
        app:layout_constraintEnd_toEndOf="@+id/btn_door_lock"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_door_lock"
        app:layout_constraintTop_toBottomOf="@+id/btn_door_lock">

    </TextView>




</androidx.constraintlayout.widget.ConstraintLayout>