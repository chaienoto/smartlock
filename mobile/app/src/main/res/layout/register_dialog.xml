<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng kí SmartLock với số điện thoại"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_register_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0123123123"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/cb_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:text="Tôi đã đọc và đồng ý với điều khoản sử dụng của SmartLock" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|center_horizontal|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.5dp"
            android:layout_marginHorizontal="10dp"
            android:text="QUAY LẠI"
            android:textColor="@color/colorBlack" />
        <TextView
            android:id="@+id/tv_continue_dialog"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="17.5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0"
            android:text="TIẾP TỤC"
            android:textColor="@color/colorGray" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>