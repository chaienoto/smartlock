<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:padding="40dp"
    tools:context=".Activities.AuthenticationActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Xác thực OTP"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Một mã xác thực đã gửi đến"
        android:textAlignment="center"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_phoneNumForVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="0123123123"
        android:textColor="@color/colorWhite"/>

    <EditText
    android:id="@+id/ed_otp_code"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_below="@+id/tv_phoneNumForVerify"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/bogocne"
    android:gravity="center"
    android:hint="Mã xác thực"
    android:inputType="number"
    android:maxLength="10"
    android:textColorHighlight="@color/colorBlack"
    android:textSize="20dp" />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_otp_code"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogocne"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Tiếp tục"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_change_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_verify"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="Thay đổi sđt"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_verify"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="Gửi lại otp"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />

</RelativeLayout>