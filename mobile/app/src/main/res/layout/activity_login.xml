<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:padding="40dp"
    tools:context=".Activities.LoginActivity">

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Xin Chào!"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="CHAIENOTO"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="17dp"
        android:layout_below="@id/tv3" />
    <TextView
        android:id="@+id/tv_login_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_login_name"
        android:text="0336471477"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_login_phoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bogocne"
        android:gravity="center"
        android:hint="Mật khẩu"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColorHighlight="@color/colorBlack"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_login_password"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogocne"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="ĐĂNG NHẬP"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_change_login_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:text="ĐỔI TÀI KHOẢN"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="15dp"
        android:text="QUÊN MẬT KHẨU"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

</RelativeLayout>