<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:padding="40dp"
    tools:context=".Activities.ForgotPasswordActivity">

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="ĐỔI MẬT KHẨU"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_forgot_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="CHAIENOTO"
        android:textColor="@color/colorWhite"
        android:textSize="17dp"
        android:layout_below="@id/tv7" />
    <TextView
        android:id="@+id/tv_forgot_login_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_forgot_login_name"
        android:text="0336471477"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/et_forgot_login_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_forgot_login_phoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bogocne"
        android:gravity="center"
        android:paddingHorizontal="18dp"
        android:hint="Mật khẩu mới"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColorHighlight="@color/colorBlack"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_forgot_login_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/et_forgot_login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/bogocne"
        android:paddingHorizontal="18dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:hint="Nhập lại mật khẩu"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColorHighlight="@color/colorBlack"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_forgot_login_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_forgot_login_password_confirm"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogocne"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="XÁC NHẬN"
        android:textAllCaps="true"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/colorWhite" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/et_forgot_login_password"
        android:layout_alignTop="@+id/et_forgot_login_password"
        android:layout_alignBottom="@+id/et_forgot_login_password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_password_24dp" />

    <ImageView
        android:layout_width="23dp"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/et_forgot_login_password_confirm"
        android:layout_alignTop="@+id/et_forgot_login_password_confirm"
        android:layout_alignBottom="@+id/et_forgot_login_password_confirm"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_password_24dp" />

</RelativeLayout>