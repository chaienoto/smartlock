<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AutoUnlockActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingTop="70dp"
        android:paddingStart="30dp"
        android:layout_alignParentTop="true"
        android:id="@+id/trusted_devices_toolbar"
        app:titleTextColor="@color/colorWhite"
        android:background="@drawable/background_toolbar"
        app:theme="@style/ToolbarColoredBackArrow" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trusted_device_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trusted_devices_toolbar"
        android:layout_marginTop="1dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/btn_add_trusted_device"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/cardview_bg"
        android:text="Thêm thiết bị"
        android:textAllCaps="true"
        android:textColor="@color/colorBlueNight"
        android:textSize="17dp"></Button>



</RelativeLayout>